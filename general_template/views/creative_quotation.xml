<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="quotation_delivery_creative_external_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-call="general_template.quotation_delivery_creative_header"/>
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                <t t-raw="0"/>
            </div>
            <t t-call="general_template.templates_footer"/>
        </template>
        <template id="quotation_delivery_creative_header">
            <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tbody>
                        <tr>
                            <td>
                                <center>
                                    <table border="0" cellpadding="0" cellspacing="0" t-attf-style="padding:0px 20px 10px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                        <tr>
                                            <td align="left" style="color:#4D4D4F; padding:0px; line-height:16px; padding-top:16px;" valign="top" width="570">
                                                <t t-call="general_template.templates_company_details"/>
                                            </td>
                                            <td align="right" style="color:#4D4D4F; padding:0px; margin:0 " valign="middle">
                                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                    <tr>
                                                        <td align="right" style="color:#4D4D4F; padding:0 0px; margin:0 " valign="middle">
                                                            <img style="max-height: 80px; margin-top: 18%;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.invoice_logo) or to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </center>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </template>
        <template id="report_quotation_creative_main">
            <t t-call="general_template.quotation_delivery_creative_external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                    <div class="oe_structure"/>
                    <t t-call="general_template.templates_watermark"/>
                    <div  width="100%">
                        <div t-attf-style="padding:10px 20px 20px 20px; margin:0; background:#fff; line-height:20px; border-top:1px solid #{theme_color or '#000000'};" width="100%">
                            <div style="background-color:#f2f2f2;overflow: auto;">
                                <div align="left" style="float:left;padding:15px; width:50%; line-height:18px;" valign="top">
                                    <t t-call="general_template.templates_warehouse_details"/>
                                    <t t-call="general_template.templates_customer_details"/>
                                </div>
                                <div align="right" style="float:right;padding:15px; width:50%; " valign="top">
                                    <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                        <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                            <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                                <span>Request for Quotation # </span>
                                            </td>
                                            <td t-attf-style="text-align:right; font-weight:bold;padding:9px 15px;">
                                                <span t-field="o.name"/>
                                            </td>
                                        </tr>
                                        <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                            <td colspan="2" style="background-color:#f2f2f2; height:4px;"/>
                                        </tr>
                                        <tr t-attf-style="color: #{text_color or '#000000'};">
                                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                                <strong t-if="o.state not in ['draft']">Date Ordered:</strong>
                                                <strong t-if="o.state in ['draft']">Quotation Date:</strong>
                                            </td>
                                            <td t-attf-style="text-align:right; padding:5px 15px;">
                                                <span t-field="o.date_order"/>
                                            </td>
                                        </tr>
                                        <tr/>
                                        <tr t-attf-style="color: #{text_color or '#000000'};">
                                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                                <span class="text-left">Your Order Reference</span>
                                            </td>
                                            <td t-attf-style="text-align:right;padding:5px 15px;">
                                                <span t-field="o.partner_ref"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div>
                                <p t-attf-style="border-bottom:1px solid #{theme_color or '#000000'}; padding:0px;"/>
                            </div>
                            <div>
                                <t t-call="general_template.quotation_template_order_lines"/>
                            </div>
                            <div t-attf-style="border-top:1px solid #{'#959595'};color: #{text_color or '#000000'}; padding-top:5px; width:100%;" t-if="o.notes and o.company_id.is_show_notes == True">
                                <p t-field="o.notes"/>
                            </div>
                            <div align="right" t-attf-style="color: #{text_color or '#000000'};">
                                <t t-call="general_template.report_signature"/>
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
                <t t-call="general_template.report_barcode"/>
            </t>
        </template>
        <template id="report_quotation_custom_creative">
            <t t-call="web.html_container">
                <t t-as="o" t-foreach="docs">
                    <t t-call="general_template.report_quotation_creative_main" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>