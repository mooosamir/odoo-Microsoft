<odoo>
	<record id="update_email_patient_profile_form" model="ir.ui.view">
	    <field name="name">update.email.patient.profile.form</field>
	    <field name="model">update.email.patient.profile</field>
	    <field name="arch" type="xml">
            <form>
                <group>
                    <field name='email' required='1'/>
                </group>
                <footer class="oe_edit_only">
                    <button name="action_update_email" type="object" string="Update Email" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
