<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_website_config_settings" model="ir.ui.view">
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <div id="domain_setting" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="tawk_setting">
                        <div class="o_setting_right_pane">
                            <label string="Tawk Setting"/>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-md-3 o_light_label" string="Site ID"/>
                                        <field name="tawk_siteid" placeholder="Site ID from tawk.to dashboard" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>