<odoo>
    <record model="ir.ui.view" id="res_config_settings_vision_web_form_view">
        <field name="name">res.config.settings.vision_web.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="VisionWeb" string="VisionWeb" data-key="VisionWeb">
                    <h2>Vision Web</h2>
                    <div class="col-12 o_setting_box" >
                        <group colspan="4">
                            <field name="vw_username"/>
                            <field name="vw_password"/>
                            <field name="vw_sloid"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>