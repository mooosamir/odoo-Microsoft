<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="tree_hcpcs" model="ir.ui.view">
            <field name="name">hcpcs.tree.view</field>
            <field name="model">spec.lens.treatment.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="pro_code_id" options="{'no_create':True, 'no_open':True}" required="1"/>
                    <field name="modifier_id" options="{'no_create':True, 'no_open':True}" required="0"/>
                    <field name="price" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>